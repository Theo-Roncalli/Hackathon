docker.enabled = true

process {
    shell = ['/bin/sh']
    executor='local'
    withName: Fasterq {
        cpus=1
        container='staphb/sratoolkit:latest'
        echo=true
    }
    withName: Genome {
        cpus=1
        echo=true
    }
    withName: Index {
        cpus=14
        container='evolbioinfo/star:v2.7.6a'
        echo=true
    }
}

params {
    // TODO : discuss naming of params
    // (ftp might be obscure to a new user)
    // we could use something as "genome_url" 

    // parameters to be passed to scripts 
    index_cpus = 14

    // optional command-line arguments 
    reads = null
    genome = null

    // default values for automatic (default)
    // execution of the pipeline
    ftp = "ftp://ftp.ncbi.nlm.nih.gov/genomes/all/GCA/000/001/405/GCA_000001405.14_GRCh37.p13/GO_TO_CURRENT_VERSION/GCA_000001405.28_GRCh38.p13_genomic.fna.gz"
    // testing ids
    ids = ['SRR15678351','SRR15289297']
    // full pipeline execution ids 
    // params.ids = ['SRR628582', 'SRR628583', 'SRR628584', 'SRR628585', 'SRR628586', 'SRR628587', 'SRR628588', 'SRR628589']
    
    // STAR parameters
    sjdbOverhang = 99

    // Locations (we should probably remove this)
    // temporarily we leave this section.
    genomeDir = "Index"

}
